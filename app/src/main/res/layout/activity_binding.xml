<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              android:background="@color/background_color">


    <EditText
        android:id="@+id/binding_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_65_dip"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_@.*#"
        android:hint="请输入激活码"
        android:maxLength="50"
        android:singleLine="true"
        android:textColorHint="@color/register_text_hint_gray"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/dimen_20_dip" />

    <TextView
        android:id="@+id/imei_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_65_dip"
        android:background="@drawable/bg_menu"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginBottom="1dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimen_20_dip" />

    <TextView
        android:id="@+id/version_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_65_dip"
        android:background="@drawable/bg_menu"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="1dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimen_20_dip" />

    <TextView
        android:id="@+id/binding_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_65_dip"
        android:background="@drawable/bg_menu"
        android:gravity="center"
        android:padding="10dp"
        android:text="绑定"
        android:layout_marginTop="1dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimen_20_dip" />
    <Button
        android:background="@color/blue"
        android:layout_marginBottom="30dp"
        android:id="@+id/bt_updata"
        android:text="升级助手"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>

